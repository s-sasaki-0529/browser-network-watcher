{
  "manifest_version": 3,
  "name": "Browser Network Watcher",
  "version": "1.0",
  "description": "Monitor API requests in web pages.",
  "permissions": ["webRequest", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.tsx"],
      "run_at": "document_end",
      "type": "module"
    }
  ]
}
